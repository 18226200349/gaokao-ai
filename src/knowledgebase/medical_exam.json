  "health_standards": {
    "major_restrictions": [
      {
        "id": "heart_disease",
        "condition": "心脏病",
        "description": "先天性心脏病经手术治愈，或房室间隔缺损分流量少，动脉导管未闭返流血量少，经二级以上医院专科检查确定无需手术者除外。",
        "restricted_majors": ["体育学类", "军事类", "公安类", "海洋科学类"]
      },
      {
        "id": "hypertension",
        "condition": "高血压",
        "description": "血压超过140/90mmHg者，不宜报考工科的地质、采矿、测绘、水利电力类，理科的海洋科学类等专业。",
        "restricted_majors": ["地质类", "采矿类", "测绘类", "水利类"]
      },
      {
        "id": "visual_impairment",
        "condition": "视力障碍",
        "description": "裸眼视力任何一眼低于5.0者，不能录取的专业：飞行技术、航海技术、消防工程、刑事科学技术、侦察。裸眼视力任何一眼低于4.8者，不能录取的专业：轮机工程、运动训练、民族传统体育。",
        "restricted_majors": ["飞行技术", "航海技术", "消防工程", "刑事科学技术"]
      },
      {
        "id": "color_blindness",
        "condition": "色盲色弱",
        "description": "色觉异常者，不能录取的专业：以颜色波长作为严格技术标准的化学类、化工与制药类、药学类、生物科学类、公安技术类、地质学类各专业，医学类各专业等。",
        "restricted_majors": ["化学类", "化工与制药类", "药学类", "医学类"]
      }
    ],
    "health_advice": [
      {
        "id": "pre_exam_preparation",
        "title": "体检前准备",
        "advice": [
          "体检前一天应清淡饮食，避免饮酒和剧烈运动",
          "体检前应保证充足睡眠",
          "体检当天需空腹（抽血检查）",
          "体检前不要服用药物，尤其是对肝肾功能有影响的药物"
        ]
      },
      {
        "id": "post_exam_attention",
        "title": "体检后注意事项",
        "advice": [
          "体检结束后及时补充水分和食物",
          "保持体检表整洁，不要折叠或损坏",
          "认真核对体检结果，如有疑问及时向医生咨询",
          "妥善保管体检表，作为高考报名和志愿填报的重要依据"
        ]
      }
    ]
  }
